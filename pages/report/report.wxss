/* pages/report/report.wxss */

.table {
  margin: 5%;
  height: 100%;
  display: flex;
  flex-direction: column;     /* 排列形式: 向下 */
}

.tr {
  display: flex;
  flex-direction: row;
  height: 40px;
}

.hr {
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  border: 1px solid #003153;
}


.td_30 {  /* 公有的属性 */
  flex-wrap: wrap;            /* 自动换行 */
  width: 30%;					/* 4个25%相加刚好100% */
  text-align: right;         /* 文本居中 */
  justify-content:center;     /* 主轴居中 */
  align-items: center;        /* 交叉轴居中 */
  color: #003153;
}

.td_70 {
  flex-wrap: wrap;            /* 自动换行 */
  width: 70%;					/* 4个25%相加刚好100% */
  text-align: left;         /* 文本居中 */
  justify-content:center;     /* 主轴居中 */
  align-items: center;        /* 交叉轴居中 */
  color: #003153;
  overflow-wrap:break-word;
}

.text0 {
  margin-left: 2%;
  margin-right: 4%;
}
