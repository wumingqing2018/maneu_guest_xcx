<!--pages/orderDetail/orderDetail.wxml-->
<view style="background-color: #003153; height: 40px; padding-left: 5%;">
  <text style="font-size: 20px; color: #FFC048;">订单详情</text>
</view>

<!-- 订单信息 -->
<view class="table">
  <view class="tr">
    <view class="td0" style="margin-top: 5%;">
      <text class="text0">订单信息</text>
    </view>
  </view>
  <view class="tr">
    <view class="td1">
      <text>购买时间</text>
    </view>
    <view class="td2">
      <text>{{ order.time }}</text>
    </view>
  </view>
  <view class="tr">
    <view class="td1">
      <text>客户姓名</text>
    </view>
    <view class="td2">
      <text>{{ order.name }}</text>
    </view>
  </view>
  <view class="tr">
    <view class="td1">
      <text>客户电话</text>
    </view>
    <view class="td2">
      <text>{{ order.phone }}</text>
    </view>
  </view>
  <view class="tr">
    <view class="td1">
      <text>订单备注</text>
    </view>
    <view class="td2">
      <text>{{ order.remark }}</text>
    </view>
  </view>
</view>

<!-- 验光报告 -->
