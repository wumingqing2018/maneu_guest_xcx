  </view>
  <view class="tr">
    <view class="td1">
      <text>球镜</text>
    </view>
    <view class="td1">
      <text>{{report.OD.SPH}}</text>
    </view>
    <view class="td1">
      <text>{{report.OS.SPH}}</text>
