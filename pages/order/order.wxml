  </view>
  <view class="tr">
    <view class="td1">
      <text>柱镜</text>
    </view>
    <view class="td1">
      <text>{{report.OD.CYL}}</text>
    </view>
    <view class="td1">
      <text>{{report.OS.CYL}}</text>
    </view>
  </view>
  <view class="tr">
    <view class="td1">
      <text>轴位</text>
    </view>
    <view class="td1">
      <text>{{report.OD.AX}}</text>
    </view>
    <view class="td1">
