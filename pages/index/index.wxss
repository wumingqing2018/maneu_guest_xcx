/**index.wxss**/
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
}

.userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.usermotto {
    margin-top: 200px;
}

.h5 {
    padding: 5%;
    font-size: 15px;
}

.s_view {
    margin-left: 10%;
    width: 82%;
    text-align: center;
}

.banner-text {
    background-color: #f6f4f4;
    border-radius: 10px;
    margin-bottom: 1%;
    height: 40px;
    line-height: 40px;
}

.m_view {
    padding-left: 10%;
    width: 80%;
}

.m_show {
    width: 100%;
    border-radius: 30rpx;
}

.getOrder {
    width: 50% !important;
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
}

.getReport {
    width: 50% !important;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
}

.pure_top {
    width: 100%;
    overflow: hidden;
}

.pure_top::after {
    content: '';
    width: 100%;
    height: 30px;
    position: absolute;
    top: 0;
    z-index: -1;
    border-radius: 0 0 80% 80%;
    background: #003153;
}